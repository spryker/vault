<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd" name="zed"
          namespace="Orm\Zed\Vault\Persistence"
          package="src.Orm.Zed.Vault.Persistence"
>

    <table name="spy_vault" idMethod="native" allowPkInsert="true" phpName="SpyVault">
        <column name="id_vault" required="true" type="INTEGER" primaryKey="true" autoIncrement="true"/>
        <column name="data_type" required="true" type="VARCHAR" size="255"/>
        <column name="data_key" required="true" type="VARCHAR" size="255"/>
        <column name="initial_vector" required="true" type="VARCHAR" size="255"/>
        <column name="cipher_text" required="true" type="LONGVARCHAR"/>

        <behavior name="timestampable"/>

        <id-method-parameter value="id_vault_pk_seq"/>

        <index name="spy_quote-data_type-data_key">
            <index-column name="data_type"/>
            <index-column name="data_key"/>
        </index>
    </table>

</database>
